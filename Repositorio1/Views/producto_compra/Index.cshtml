@model IEnumerable<Repositorio1.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Producto Compra</h2>

<p>
    @Html.ActionLink("Crear Nuevo ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Compra
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_compra)
            </td>
            <td>
                @Repositorio1.Controllers.producto_compraController.Nombreproducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts
    {
    <script>
        $(".linkDelete").click(function (event)
        {
            if (!confirm('¿Esta seguro de Eliminar ? '))
            {
                event.preventDefault();
            }
        })
    </script>
}