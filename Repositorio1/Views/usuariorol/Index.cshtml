@model IEnumerable<Repositorio1.Models.usuariorol>

@{
    ViewBag.Title = "Index";
}

<h2>Usuario Rol</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Repositorio1.Controllers.usuariorolController.Nombreusuario(item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts
    {
    <script>
        $(".linkDelete").click(function (event)
        {
            if (!confirm('¿Esta seguro de Eliminar ? '))
            {
                event.preventDefault();
            }
        })
    </script>
}