<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/custom.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de inventario", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sobre Mi", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                    <li>@Html.ActionLink("Iniciar Sesion", "Login", "Usuario")</li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Crud Tablas<span class="caret"></span></a>
                            <ul class="dropdown-menu">


                                <li> @Html.ActionLink("CRUD Usuario", "Index", "Usuario")                 </li>

                                <li>@Html.ActionLink("CRUD Producto", "Index", "Producto")                 </li>
 
                                <li>@Html.ActionLink("CRUD Cliente", "Index", "Cliente")                 </li>
                               
                                <li> @Html.ActionLink("CRUD Proveedor", "Index", "Proveedor")                 </li>
                                
                                <li>@Html.ActionLink("CRUD Usuariorol", "Index", "usuariorol")                 </li>
                                
                                <li>@Html.ActionLink("CRUD Compra", "Index", "Compra")                 </li>
                                
                                <li>@Html.ActionLink("CRUD Producto Compra", "Index", "producto_compra")                 </li>
                                
                                <li>@Html.ActionLink("CRUD Producto Imagen", "Index", "producto_imagen")                 </li>
                                
                                <li>@Html.ActionLink("CRUD Roles", "Index", "Roles")                 </li>
                                
                                <li>@Html.ActionLink("Salir", "CloseSession", "Usuario")                     </li>

                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="navbar-link dropdown-toggle active" data-toggle="dropdown" data-target="desplegable" href="#">

                                Reportes
                            </a>
                            <div class="dropdown-menu">


                                <a class="dropdown-item" href="#">@Html.ActionLink("Reporte Compra", "ReporteCompra", "Compra")                 </a>
                                <br />
                                <a class="dropdown-item" href="#">@Html.ActionLink("Reporte Proveedor", "Reporte", "Producto")                 </a>

                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="navbar-link dropdown-toggle active" data-toggle="dropdown" data-target="desplegable" href="#">

                                Subir Archivos
                            </a>
                            <div class="dropdown-menu">


                                <a class="dropdown-item" href="#">@Html.ActionLink("Subir Proveedor", "uploadCSV", "Proveedor")                 </a>
                                <br />
                                <a class="dropdown-item" href="#">@Html.ActionLink("Subir Cliente", "uploadCSV", "Cliente")</a>

                               
                            </div>
                        </li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Todos los derechos reservados | Erick Felipe Pineda | efpineda56@misena.edu.co</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
